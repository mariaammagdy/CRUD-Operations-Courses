@model List<Department>
@{
    Layout = "_layout2";
    ViewBag.Title = "List";
}
<div class="container">
<div class="container table-container">
    <a asp-action="Create" asp-controller="Department" class="btn btn-danger">Create</a><br />
    <br />

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody id="UserTable">
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4">No Departments</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DeptId</td>
                        <td>@item.DeptName</td>
                        <td>@item.Capacity</td>
                        <td>
                                <a asp-action="Details" asp-controller="Department" asp-route-id="@item.DeptId" class="btn btn-custom btn-details">    <i class="fas fa-info-circle"></i> Details</a>
                                <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.DeptId" class="btn btn-custom btn-delete">    <i class="fas fa-trash"></i> Delete</a>

                                <a asp-action="Update" asp-controller="Department" asp-route-id="@item.DeptId" class="btn btn-success btn-sm">    <i class="fas fa-edit"></i> Edit</a>
                        </td>
                           
                           


                    </tr>
                }
            }
        </tbody>
    </table>
</div>
</div>