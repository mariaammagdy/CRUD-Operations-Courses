@model List<Course>
@{
    Layout = "_layout2";
    ViewBag.Title = "list";
}


<div class="container">
    <div class="container table-container">
        <a asp-action="create" asp-controller="Course" class="btn btn-danger">Create</a><br />
        <br />

        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>name</th>
                    <th>capacity</th>
                    <th>operation</th>
                </tr>
            </thead>
            <tbody id="UserTable">

                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="4">No Course</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Duration</td>
                            <td>
                                <a asp-action="details" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                <a asp-action="delete" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                <a asp-action="update" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            </td>
                        </tr>

                    }
                }

            </tbody>
        </table>
        </div>
    </div>
